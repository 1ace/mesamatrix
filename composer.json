{
    "name": "mesamatrix/mesamatrix",
    "description": "Mesamatrix website",
    "license": "AGPL-3.0",
    "type": "project",
    "homepage": "https://mesamatrix.net",

    "authors": [
        {
            "name": "Romain Failliot",
            "email": "romain.failliot@foolstep.com"
        }
    ],

    "config": {
        "platform": {
            "php": "7.4"
        }
    },

    "require": {
        "symfony/console": "*",
        "symfony/debug": "*",
        "symfony/process": "*",
        "symfony/monolog-bridge": "*",
        "symfony/http-kernel": "*",
        "monolog/monolog": "*",
        "suin/php-rss-writer": "*"
    },

    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    },

    "autoload": {
        "psr-4": {
            "Mesamatrix\\": "lib/"
        }
    },

    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=PSR1 --ignore='*.css,*.js' -n http lib"
    }
}
